\RequirePackage{tikz}
\RequirePackage{calc}
\RequirePackage{appendixnumberbeamer}

\RequirePackage[scriptsize,it]{caption}
\captionsetup{labelformat=empty,labelsep=none}

\mode<presentation>

%%% variables and options
\def\beamer@erlangen@value@true{true}
\def\beamer@erlangen@value@false{false}
\def\beamer@erlangen@value@empty{}

\def\beamer@erlangen@url{}
\def\beamer@erlangen@numbering{}
\def\beamer@erlangen@titlepagelayout{}

\newlength{\beamer@erlangen@menuwidth}
\newlength{\beamer@erlangen@restofmenuwidth}

\setlength{\beamer@erlangen@menuwidth}{.3\paperwidth}

\DeclareOptionBeamer{url}[{www.techfak.uni-erlangen.de}]{\def\beamer@erlangen@url{#1}}
\DeclareOptionBeamer{numbering}[true]{\def\beamer@erlangen@numbering{#1}}
\DeclareOptionBeamer{titlepagelayout}[]{\def\beamer@erlangen@titlepagelayout{#1}}
\DeclareOptionBeamer{menuwidth}[]{\setlength{\beamer@erlangen@menuwidth}{#1}}

\ProcessOptionsBeamer

\setlength{\beamer@erlangen@restofmenuwidth}{0.95\paperwidth}
\addtolength\beamer@erlangen@restofmenuwidth{-\beamer@erlangen@menuwidth}

\useinnertheme{circles}
\useoutertheme{miniframes}
\usecolortheme{erlangen}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{background canvas}[vertical shading][bottom=white,middle=white!15,top=gray!5]

\setbeamercolor{block body}{bg=}

% TITLE PAGE
\defbeamertemplate*{title page}{titlepage}
{
  \thispagestyle{empty}

  \begin{picture}(0,0)(0,0)
    %\put(-29,-170){\includegraphics[width=1.01\paperwidth]{titlepage_new.png}}
  \end{picture}

  \begin{picture}(0,0)(0,0)
    \put(10,0){
        \begin{minipage}{0.9\linewidth}
        \vspace{20mm}
        \centering{\LARGE\color{logo_grey} \inserttitle\par}
        \vspace{10mm}
        \centering{\large\color{logo_grey} \insertauthor\par}
        \vspace{10mm}
        \centering{\large\color{logo_grey} \insertsubtitle\par}
        \vspace{27mm}
        \centering{\color{logo_grey} \insertinstitute\par}
        \end{minipage}
    }
  \end{picture}
  

}









% HEADER
\defbeamertemplate*{headline}{erlangen}%
{
  \begin{beamercolorbox}[wd=\paperwidth,leftskip=1em,sep=0.3em]{headerline title}
    \begin{minipage}{\beamer@erlangen@restofmenuwidth}
        {\tiny{\bfseries }}%
    \end{minipage}
    \hspace{0px}
    \begin{minipage}{\beamer@erlangen@menuwidth}
      \begin{flushright}
	    \vspace{4px}
        \insertsectionnavigationhorizontal{\paperwidth}{\hskip0pt plus1fill}{\hskip0pt plus1fill}
      \end{flushright}
    \end{minipage}
    
  \end{beamercolorbox}
  \begin{beamercolorbox}[wd=\paperwidth,sep=1px]{headerline border}
    \vspace{1px}
  \end{beamercolorbox}
}

